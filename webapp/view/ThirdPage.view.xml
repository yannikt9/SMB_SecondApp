<mvc:View
	controllerName="project1.controller.ThirdPage"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns="sap.m"
	xmlns:layout="sap.ui.layout"
	xmlns:f="sap.f"
	displayBlock="true"
	height="100%"
	busyIndicatorDelay="0"
>
	<f:DynamicPage
		id="dynamicPageId"
		stickySubheaderProvider="iconTabBar"
		class="sapUiNoContentPadding"
		toggleHeaderOnTitleClick="{/titleClickable}"
	>
		<f:title>
			<f:DynamicPageTitle>
				<f:heading>
					<Title
						id="thirdPageTitle"
						text="{SalesOrder}"
					/>
				</f:heading>
				<f:breadcrumbs>
					<Breadcrumbs>
						<Link
							text="{i18n>headerTitle}"
							href="./index.html"
						/>
						<Link
							text="{
								path: 'SalesOrganization'
							}"
							press=".onNavBack"
						/>
					</Breadcrumbs>
				</f:breadcrumbs>
			</f:DynamicPageTitle>
		</f:title>
		<f:header>
			<f:DynamicPageHeader>
				<layout:HorizontalLayout allowWrapping="true">
					<layout:VerticalLayout class="sapUiMediumMarginEnd">
						<ObjectAttribute
							title="{i18n>soldToPartyID}"
							text="{SoldToParty}"
						/>
					</layout:VerticalLayout>
					<layout:VerticalLayout class="sapUiMediumMarginEnd">
						<ObjectAttribute
							title="{i18n>salesOrderDate}"
							text="{
								path: 'SalesOrderDate',
								formatter: '.formatter.formatDate'
							}"
						/>
					</layout:VerticalLayout>
					<layout:VerticalLayout class="sapUiMediumMarginEnd">
						<ObjectStatus
							title="{i18n>deliveryStatus}"
							text="{
								path: 'OverallDeliveryStatus',
								formatter: '.formatter.statusText'
							}"
						/>
					</layout:VerticalLayout>
					<layout:VerticalLayout class="sapUiMediumMarginEnd">
						<ObjectAttribute
							title="{i18n>soldToParty}"
							text="{bpModel>/BusinessPartnerName}"
						/>
					</layout:VerticalLayout>
				</layout:HorizontalLayout>
			</f:DynamicPageHeader>
		</f:header>
		<f:content>
			<IconTabBar
				id="iconTabBar"
				class="sapUiResponsiveContentPadding"
			>
				<items>
					<IconTabFilter text="{i18n>purchasePositions}">
						<Table
							id="idProductsTable"
							sticky="HeaderToolbar,ColumnHeaders"
							class="sapUiSmallNegativeMarginBeginEnd"
							width="auto"
						>
							<columns>
								<Column width="12%">
									<Text text="{i18n>salesOrder}"/>
								</Column>
								<Column width="15%">
									<Text text="{i18n>soldToPartyID}"/>
								</Column>
								<Column width="15%">
									<Text text="{i18n>salesOrderDate}"/>
								</Column>
								<Column
									width="15%"
									minScreenWidth="Tablet"
									demandPopin="true"
								>
									<Text text="{i18n>deliveryStatus}"/>
								</Column>
								<Column
									width="28%"
									demandPopin="true"
									hAlign="End"
								>
									<Text text="{i18n>productDescription}"/>
								</Column>
								<Column
									width="15%"
									hAlign="End"
								>
									<Text text="{i18n>totalNetAmount}"/>
								</Column>
							</columns>
							<items>
								<ColumnListItem>
									<cells>
										<Text text="{SalesOrder}"/>
										<Text text="{SoldToParty}"/>
										<Text text="{
											path: 'SalesOrderDate',
											formatter: '.formatter.formatDate'
										}"/>
										<ObjectStatus
											text="{
												path: 'OverallDeliveryStatus',
												formatter: '.formatter.statusText'
											}"
											state="{
												path: 'OverallDeliveryStatus',
												formatter: '.formatter.colorSetter'
											}"
										/>
										<Text text="{
											path: 'IncotermsTransferLocation'
										}"/>
										<ObjectNumber number="{
											parts: [{
												path: 'TotalNetAmount'
											}, {
												path: 'TransactionCurrency'
											}],
											type: 'sap.ui.model.type.Currency',
											formatOptions: {
												showMeasure: true
											}
										}"/>
									</cells>
								</ColumnListItem>
							</items>
						</Table>
					</IconTabFilter>
				</items>
			</IconTabBar>
		</f:content>
	</f:DynamicPage>
</mvc:View>