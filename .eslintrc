{
    "root": true, 
    "env": {
        "browser": true,
        "es2020": true,
        "jquery": true
    },
    "globals": {
        "sap": true
    },
    "extends": [
        "airbnb-base",
        "prettier"
    ],
    "rules": {
        "no-underscore-dangle": [0, { "allowAfterThis": true }],
        "prefer-arrow-callback": 0,
        "func-names": 0,
        "object-shorthand": [0, "consistent"],
        "no-console": 0,
        "no-warning-comments": 1
    },
    "ignorePatterns": [ 
        "test/*", 
        "dist/*",
        "localService/*",
        "approuter/*",
        "deployer/*",
        "mta_archives/*",
        "karma*.js"
    ] 
}
