<mvc:View
	controllerName="project1.controller.SecondPage"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns="sap.m"
	xmlns:f="sap.f"
	displayBlock="true"
	height="100%"
	busyIndicatorDelay="0"
	xmlns:core="sap.ui.core"
	xmlns:fb="sap.ui.comp.filterbar"
>
	<f:DynamicPage
		id="secondPage"
		stickySubheaderProvider="iconTabBar"
		class="sapUiNoContentPadding"
		toggleHeaderOnTitleClick="{/titleClickable}"
	>
		<f:title>
			<f:DynamicPageTitle>
				<f:heading>
					<Title id="secondPageTitle"/>
				</f:heading>
				<f:breadcrumbs>
					<Breadcrumbs>
						<Link
							text="{i18n>headerTitle}"
							href="./index.html"
						/>
					</Breadcrumbs>
				</f:breadcrumbs>
			</f:DynamicPageTitle>
		</f:title>
		<f:header>
			<f:DynamicPageHeader>
				<f:content>
					<fb:FilterBar
						id="filterBar"
						visible="true"
						useToolbar="false"
						showFilterConfiguration="false"
						clear=".onDeleteFilter"
						showClearOnFB="true"
						showGoOnFB="false"
					>
						<fb:filterGroupItems>
							<fb:FilterGroupItem
								groupName="ASD"
								name="filterBarStatus"
								label="{i18n>dimensionDefinition}"
								visibleInFilterBar="true"
							>
								<fb:control>
									<MultiComboBox
										id="statusSelection"
										placeholder="{i18n>deliveryStatus}"
										selectionChange="onStatusSelectionChange"
										selectionFinish="onStatusSelectionFinished"
										width="13rem"
									>
										<items>
											<core:Item
												key="A"
												text="{i18n>invoiceStatusA}"
											/>
											<core:Item
												key="C"
												text="{i18n>invoiceStatusC}"
											/>
											<core:Item
												key="B"
												text="{i18n>invoiceStatusB}"
											/>
										</items>
									</MultiComboBox>
								</fb:control>
							</fb:FilterGroupItem>
							<fb:FilterGroupItem
								name="filterBarSalesOrganization"
								groupName="ASD"
								visibleInFilterBar="true"
								label="{i18n>salesOrganization}"
							>
								<fb:control>
									<ComboBox
										id="salesOrganizationSelection"
										placeholder="{i18n>salesOrganization}"
										change=".onSalesOrganizationChanged"
										width="13rem"
										items="{salesOrg>/}"
									>
										<core:ListItem
											id="listItem"
											key="{salesOrg>SalesOrganization}"
											text="{salesOrg>SalesOrganizationName}"
										/>
									</ComboBox>
								</fb:control>
							</fb:FilterGroupItem>
							<fb:FilterGroupItem
								name="filterBarDateRange"
								label="{i18n>timeFrame}"
								groupName="ASD"
								visibleInFilterBar="true"
							>
								<fb:control>
									<DateRangeSelection
										placeholder="{i18n>calendarPlaceholder}"
										id="dateSelection"
										width="13rem"
										delimiter="{
											path: '/delimiterDRS1'
										}"
										dateValue="{
											path: '/dateValueDRS1'
										}"
										secondDateValue="{
											path: '/secondDateValueDRS1'
										}"
										displayFormat="{
											path: '/dateFormatDRS1'
										}"
										change=".onDateChanged"
									/>
								</fb:control>
							</fb:FilterGroupItem>
						</fb:filterGroupItems>
					</fb:FilterBar>
				</f:content>
			</f:DynamicPageHeader>
		</f:header>
		<f:content>
			<Table
				class="sapFDynamicPageAlignContent sapUiSmallMargin"
				id="orderTable"
				ariaLabelledBy="title"
				items="{/A_SalesOrder}"
				width="auto"
				growing="true"
				growingScrollToLoad="true"
				growingThreshold="50"
			>
				<columns>
					<Column width="10%">
						<Label text="{i18n>salesOrder}"/>
					</Column>
					<Column width="20%">
						<Label text="{i18n>salesOrganization}"/>
					</Column>
					<Column width="25%">
						<Label text="{i18n>deliveryStatus}"/>
					</Column>
					<Column width="20%">
						<Label text="{i18n>soldToParty}"/>
					</Column>
					<Column
						width="15%"
						hAlign="End"
					>
						<Label text="{i18n>salesOrderDate}"/>
					</Column>
					<Column
						width="10%"
						hAlign="End"
					>
						<Label text="{i18n>totalNetAmount}"/>
					</Column>
				</columns>
				<items>
					<ColumnListItem
						type="Navigation"
						press=".onRowPressed"
					>
						<cells>
							<Text text="{SalesOrder}"/>
							<Text text="{SalesOrganization}"/>
							<ObjectStatus
								text="{
									path: 'OverallDeliveryStatus',
									formatter: '.formatter.statusText'
								}"
								state="{
									path: 'OverallDeliveryStatus',
									formatter: '.formatter.colorSetter'
								}"
							/>
							<Text text="{SoldToParty}"/>
							<Text text="{
								path: 'SalesOrderDate',
								formatter: '.formatter.formatDate'
							}"/>
							<ObjectNumber number="{
								parts: [{
									path: 'TotalNetAmount'
								}, {
									path: 'TransactionCurrency'
								}],
								type: 'sap.ui.model.type.Currency',
								formatOptions: {
									showMeasure: true
								}
							}"/>
						</cells>
					</ColumnListItem>
				</items>
			</Table>
		</f:content>
	</f:DynamicPage>
</mvc:View>