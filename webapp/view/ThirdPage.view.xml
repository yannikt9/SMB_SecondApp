			</f:DynamicPageTitle>
		</f:title>
		<f:header>
			<f:DynamicPageHeader>
				<layout:HorizontalLayout allowWrapping="true">
					<layout:VerticalLayout class="sapUiMediumMarginEnd">
						<ObjectAttribute
							title="Kunde"
							text="{orders>SoldToParty}"
						/>
					</layout:VerticalLayout>
					<layout:VerticalLayout class="sapUiMediumMarginEnd">
						<ObjectAttribute
							title="Auftragsdatum"
							text="{orders>SalesOrderDate}"
						/>
					</layout:VerticalLayout>
					<layout:VerticalLayout class="sapUiMediumMarginEnd">
						<ObjectAttribute
							title="Zahldatum"
							text="{orders>SalesOrderDate}"
						/>
					</layout:VerticalLayout>
					<layout:VerticalLayout class="sapUiMediumMarginEnd">
						<ObjectAttribute
							title="Status"
							text="{orders>OverallDeliveryStatus}"
							emphasized="false"
							state="Error"
						/>
					</layout:VerticalLayout>
				</layout:HorizontalLayout>
			</f:DynamicPageHeader>
		</f:header>
		<f:content>
			<IconTabBar
				id="iconTabBar"
				class="sapUiResponsiveContentPadding"
			>
				<items>
					<IconTabFilter text="Positionen">
						<Table
							id="idProductsTable"
							sticky="HeaderToolbar,ColumnHeaders"
							class="sapUiSmallNegativeMarginBeginEnd"
							width="auto"
						>
							<!-- Titelspalte: Menge, ID, Produkt, Beschreibung, Auftragsdatum, Preis -->
							<columns>
								<Column width="12em">
									<Text text="ID"/>
								</Column>
								<Column width="15em">
									<Text text="Kunde"/>
								</Column>
								<Column width="15em">
									<Text text="Datum"/>
								</Column>
								<Column
									minScreenWidth="Tablet"
									demandPopin="true"
								>
									<Text text="Status"/>
								</Column>
								<Column
									demandPopin="true"
									hAlign="End"
								>
									<Text text="Beschreibung"/>
								</Column>
								<Column hAlign="End">
									<Text text="Preis"/>
								</Column>
							</columns>
							<items>
								<ColumnListItem>
									<cells>
										<Text text="{orders>SalesOrder}"/>
										<Text text="{orders>SoldToParty}"/>
										<Text text="{orders>SalesOrderDate}"/>
										<Text text="{orders>OverallDeliveryStatus}"/>
										<Text text="nothing"/>
										<ObjectNumber number="{
											parts: [{
												path: 'orders>TotalNetAmount'
											}, {
												path: 'view>/currency'
											}],
											type: 'sap.ui.model.type.Currency',
											formatOptions: {
												showMeasure: true
											}
										}"/>
									</cells>
								</ColumnListItem>
							</items>
							<!-- <items>
								<ColumnListItem>
