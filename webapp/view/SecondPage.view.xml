<mvc:View
	controllerName="project1.controller.SecondPage"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns="sap.m"
	xmlns:f="sap.f"
	displayBlock="true"
	height="100%"
	busyIndicatorDelay="0"
	xmlns:core="sap.ui.core"
	xmlns:fb="sap.ui.comp.filterbar"
>
	<f:DynamicPage
		id="secondPage"
		stickySubheaderProvider="iconTabBar"
		class="sapUiNoContentPadding"
		toggleHeaderOnTitleClick="{/titleClickable}"
	>
		<f:title>
			<f:DynamicPageTitle>
				<f:heading>
					<Title
						id="secondPageTitle"
						text=""
					/>
				</f:heading>
				<f:breadcrumbs>
					<Breadcrumbs>
						<Link
							text="{i18n>headerTitle}"
							press=".onNavBack"
						/>
					</Breadcrumbs>
				</f:breadcrumbs>
			</f:DynamicPageTitle>
		</f:title>
		<f:header>
			<f:DynamicPageHeader>
				<f:content>
					<fb:FilterBar
						id="filterBar"
						visible="true"
						useToolbar="false"
						showFilterConfiguration="false"
						clear=".deleteButtonPressed"
						showClearOnFB="true"
						showGoOnFB="false"
					>
						<fb:filterGroupItems>
							<!-- <fb:FilterGroupItem
								name="filterBarTitle"
								groupName="ASD"
								visibleInFilterBar="true"
							>
								<fb:control>
									<Title
										text="{i18n>filterOptions}"
										level="H2"
									/>
								</fb:control>
							</fb:FilterGroupItem> -->
							<fb:FilterGroupItem
								groupName="ASD"
								name="filterBarStatus"
								label="Status"
								visibleInFilterBar="true"
							>
								<fb:control>
									<MultiComboBox
										id="idSelectStatus"
										placeholder="{i18n>deliveryStatus}"
										selectionChange="handleSelectionChange"
										selectionFinish="handleSelectionFinish"
										width="13rem"
									>
										<items>
											<core:Item
												key="Ausgeführt"
												text="{i18n>invoiceStatusC}"
											/>
											<core:Item
												key="In Bearbeitung"
												text="{i18n>invoiceStatusB}"
											/>
											<core:Item
												key="Erfasst"
												text="{i18n>invoiceStatusA}"
											/>
										</items>
									</MultiComboBox>
								</fb:control>
							</fb:FilterGroupItem>
							<fb:FilterGroupItem
								name="filterBarSalesOrganization"
								groupName="ASD"
								visibleInFilterBar="true"
								label="Verkaufsorganisation"
							>
								<fb:control>
									<ComboBox
										id="idSelectSalesOrganization"
										placeholder="{i18n>salesOrganization}"
										change=".onSalesOrganizationChanged"
										width="13rem"
									>
										<items>
											<core:Item
												key="1010"
												text="InlandVerkOrg. DE"
											/>
											<core:Item
												key="1710"
												text="InlandVerkOrg. US"
											/>
											<core:Item
												key="2010"
												text="St. Moritz"
											/>
											<core:Item
												key="2020"
												text="Arosa"
											/>
											<core:Item
												key="2030"
												text="Laax"
											/>
											<core:Item
												key="2040"
												text="Davos"
											/>
											<core:Item
												key="2050"
												text="Chur"
											/>
											<core:Item
												key="2060"
												text="Lenzerheide"
											/>
											<core:Item
												key="2099"
												text="Interlaken"
											/>
										</items>
									</ComboBox>
								</fb:control>
							</fb:FilterGroupItem>
							<fb:FilterGroupItem
								name="filterBarDateRange"
								label="Zeitspanne"
								groupName="ASD"
								visibleInFilterBar="true"
							>
								<fb:control>
									<DateRangeSelection
										placeholder="{i18n>calendar}"
										id="dateSelection"
										width="13rem"
										delimiter="{
											path: '/delimiterDRS1'
										}"
										dateValue="{
											path: '/dateValueDRS1'
										}"
										secondDateValue="{
											path: '/secondDateValueDRS1'
										}"
										displayFormat="{
											path: '/dateFormatDRS1'
										}"
										change=".onDateChanged"
									/>
								</fb:control>
							</fb:FilterGroupItem>
							<!-- <fb:FilterGroupItem
								name="filterTabDelteButton"
								groupName="ASD"
								visibleInFilterBar="true"
							>
								<fb:control>
									<Button
										press=".deleteButtonPressed"
										text="Alle Filter löschen"
										type="Emphasized"
									/>
								</fb:control>
							</fb:FilterGroupItem> -->
						</fb:filterGroupItems>
					</fb:FilterBar>
				</f:content>
			</f:DynamicPageHeader>
		</f:header>
		<f:content>
			<Table
				class="sapFDynamicPageAlignContent sapUiSmallMargin"
				id="orderTable"
				ariaLabelledBy="title"
				items="{/A_SalesOrder}"
				width="auto"
				growing="true"
				growingScrollToLoad="true"
				growingThreshold="50"
			>
				<columns>
					<Column width="10%">
						<Label text="{i18n>salesOrder}"/>
					</Column>
					<Column width="20%">
						<Label text="{i18n>salesOrganization}"/>
					</Column>
					<Column width="25%">
						<Label text="{i18n>deliveryStatus}"/>
					</Column>
					<Column width="20%">
						<Label text="{i18n>soldToParty}"/>
					</Column>
					<Column
						width="15%"
						hAlign="End"
					>
						<Label text="{i18n>salesOrderDate}"/>
					</Column>
					<Column
						width="10%"
						hAlign="End"
					>
						<Label text="{i18n>totalNetAmount}"/>
					</Column>
				</columns>
				<items>
					<ColumnListItem
						type="Navigation"
						press=".onRowPressed"
					>
						<cells>
							<Text text="{SalesOrder}"/>
							<Text text="{SalesOrganization}"/>
							<ObjectStatus
								text="{
									path: 'OverallDeliveryStatus',
									formatter: '.formatter.statusText'
								}"
								state="{
									path: 'OverallDeliveryStatus',
									formatter: '.formatter.colorSetter'
								}"
							/>
							<Text text="{SoldToParty}"/>
							<Text text="{
								path: 'SalesOrderDate',
								formatter: '.formatter.formatDate'
							}"/>
							<ObjectNumber number="{
								parts: [{
									path: 'TotalNetAmount'
								}, {
									path: 'TransactionCurrency'
								}],
								type: 'sap.ui.model.type.Currency',
								formatOptions: {
									showMeasure: true
								}
							}"/>
						</cells>
					</ColumnListItem>
				</items>
			</Table>
		</f:content>
	</f:DynamicPage>
</mvc:View>